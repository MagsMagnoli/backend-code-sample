{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "target": "esnext",
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "paths": {
      "@src/*": ["./src/*"]
    }
  },

  "include": ["src/**/*.ts"]
}
